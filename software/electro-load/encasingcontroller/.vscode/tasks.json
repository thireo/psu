{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build all",
			"command": "make",
			"args": [
				"-S",
				"clean",
				"all",
				"-C",
				"Debug",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": ["relative", "${workspaceFolder}/encasingcontroller"],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Clean",
			"command": "make",
			"args": [
				"clean",
				"-C",
				"Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc",
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Flash",
			"command": "make",
			"args": [
				"flash",
				"-C",
				"Debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc",
			],
			"group": "test"
		}
	]
}